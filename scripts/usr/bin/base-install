#!/bin/zsh

# NOTE: this script has to be run as root (or any other user that has read/write access to the rootfs).

echo "updating the repository, this may take a while . . ."

exec base-update;

echo "installing the desired packages . . ."

while [ ! -z "$1" ]; do
    for file in /var/db/prism/packages/$(uname -m)/$1-*.tgz
        tar xvzf $file -C /;
    if [[ $# -gt 0 ]]; then
        shift
    fi
done
